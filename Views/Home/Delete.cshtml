@model TrajvRegister10.Models.Fine

@{
    ViewBag.Title = Resources.Resource.DeleteFine;
}

<link type="text/css" rel="stylesheet" href="@Url.Content("~/wwwroot/css/main.css")" />

<h3>@Resources.Resource.ConfirmDelete</h3>
<div>
    <h4>@Resources.Resource.FineInformation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CarNumber)</dt>
        <dd>@Html.DisplayFor(model => model.CarNumber)</dd>

        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.UserEmail)</dt>
        <dd>@Html.DisplayFor(model => model.UserEmail)</dd>

        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>

        <dt>@Html.DisplayNameFor(model => model.Velocity)</dt>
        <dd>@Html.DisplayFor(model => model.Velocity)</dd>

        <dt>@Html.DisplayNameFor(model => model.Sum)</dt>
        <dd>@Html.DisplayFor(model => model.Sum)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="@Resources.Resource.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Resources.Resource.BackToList, "Index")
        </div>
    }
</div>
