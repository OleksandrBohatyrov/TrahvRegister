@model IEnumerable<TrajvRegister10.Models.Fine>

@{
    ViewBag.Title = Resources.Resource.FineList;
}

<link type="text/css" rel="stylesheet" href="@Url.Content("~/wwwroot/css/main.css")" />

<div class="row">
    <div class="col-md-12">
        <img src="~/pictures/kat.jpg" alt="Header Image" class="img-responsive" style="width: 10%; height: auto;">
    </div>
</div>

<div class="container">
    <!-- Car Number Search Form -->
    <div class="row">
        <div class="col-md-12">
            <form method="get" action="@Url.Action("Index", "Home")">
                <div class="form-group">
                    <label for="searchCarNumber">@Resources.Resource.SearchCarNumber</label>
                    <input type="text" name="searchCarNumber" class="form-control" placeholder="@Resources.Resource.SearchCarNumber" value="@Request.QueryString["searchCarNumber"]" />
                </div>
                <button type="submit" class="btn btn-primary">@Resources.Resource.Search</button>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("ExportToExcel", "Home")" class="btn btn-info" style="margin-top: 5px;">@Resources.Resource.ExportToExcel</a>
                    </div>
                </div>
            </form>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().UserEmail)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CarNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Velocity)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Sum)</th>
                    <th>@Resources.Resource.Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
                        <td>@Html.DisplayFor(modelItem => item.CarNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Velocity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sum)</td>
                        <td>
                            @Html.ActionLink(Resources.Resource.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink(Resources.Resource.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('@Resources.Resource.ConfirmDelete');" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
