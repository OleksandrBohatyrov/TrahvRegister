<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Навигационная панель -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    
            <!-- Логотип -->
            <a class="navbar-brand" href="#">Trahviregister</a>

            <!-- Бургер-кнопка -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Основное меню навигации -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resource.Home, "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resource.Fines, "Fines", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <!-- Дополнительные пункты меню для админа -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink(Resources.Resource.CreateFine, "Create", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>

                <!-- Флажки для переключения языка -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("ChangeLanguage", "Home", new { lang = "en" })" class="nav-link">
                            <img src="~/pictures/uk-flag.jpg" alt="EN" style="width: 24px; height: 24px;" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ChangeLanguage", "Home", new { lang = "et" })" class="nav-link">
                            <img src="~/pictures/flag-et.gif" alt="ET" style="width: 24px; height: 24px;" />
                        </a>
                    </li>
                </ul>

                <!-- Логин/выход -->
                @Html.Partial("_LoginPartial")
            </div>
       
    </nav>

    <!-- Контент страницы -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
